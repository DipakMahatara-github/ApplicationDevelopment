@page "/add-entry"
@using ApplicationDevelopment.Model
@using ApplicationDevelopment.Service
@inject NavigationManager NavManager

<div class="entry-page">
    <div class="entry-card shadow-sm">
        <div class="card-header">
            <h2>Create Journal Entry</h2>
        </div>

        <EditForm Model="@_newEntry" OnValidSubmit="HandleSaveAsync">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger mb-2" />

            <div class="form-row">
                <div class="form-group">
                    <label>Primary Mood</label>
                    <InputSelect @bind-Value="_newEntry.PrimaryMood" class="mood-select primary">
                        <option value="">-- Select --</option>
                        <option value="Happy">Happy</option>
                        <option value="Calm">Calm</option>
                        <option value="Sad">Sad</option>
                        <option value="Angry">Angry</option>
                    </InputSelect>
                </div>

                <div class="form-group">
                    <label>Secondary Mood</label>
                    <InputSelect @bind-Value="_newEntry.SecondaryMood" class="mood-select secondary">
                        <option value="">None</option>
                        <option value="Excited">Excited</option>
                        <option value="Tired">Tired</option>
                        <option value="Grateful">Grateful</option>
                    </InputSelect>
                </div>
            </div>

            <div class="form-group tags-group">
                <label>Add Tags</label>
                <div class="tag-input">
                    <InputText @bind-Value="_newEntry.CurrentTagInput" placeholder="e.g. Work, Travel" />
                    <button type="button" class="btn btn-add" @onclick="AddTag">Add</button>
                </div>
                <div class="tag-list">
                    @foreach (var tag in _newEntry.Tags)
                    {
                        <span class="tag-badge">@tag</span>
                    }
                </div>
            </div>

            <div class="form-group">
                <label>Journal Content</label>
                <InputTextArea @bind-Value="_newEntry.Content" class="content-area" placeholder="Write your story..." />
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-save">Save Entry</button>
            </div>
        </EditForm>
    </div>
</div>

<style>
.entry-page {
    display: flex;
    justify-content: center;
    margin: 2rem auto;
}

.entry-card {
    width: 100%;
    max-width: 700px;
    background: #fefefe;
    border-radius: 1rem;
    overflow: hidden;
}

.card-header {
    background: linear-gradient(120deg,#5D3AEE,#A56EFF);
    color: white;
    padding: 1.5rem;
    text-align: center;
    font-weight: 600;
}

.form-row {
    display: flex;
    gap: 1rem;
    padding: 1rem;
}

.form-group {
    flex: 1;
    display: flex;
    flex-direction: column;
    margin-bottom: 1rem;
}

label {
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: #4a3f9d;
}

.mood-select {
    padding: 0.5rem;
    border-radius: 0.5rem;
    border: 1px solid #ccc;
}

.tags-group {
    padding: 0 1rem;
}

.tag-input {
    display: flex;
    gap: 0.5rem;
}

.btn-add {
    background: #5D3AEE;
    color: white;
    border: none;
    border-radius: 0.5rem;
    padding: 0.4rem 0.8rem;
}

.tag-list {
    margin-top: 0.5rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
}

.tag-badge {
    background: #dcd7f7;
    color: #5D3AEE;
    padding: 0.3rem 0.7rem;
    border-radius: 1rem;
    font-size: 0.85rem;
}

.content-area {
    width: 100%;
    min-height: 200px;
    border-radius: 0.75rem;
    border: 1px solid #ccc;
    padding: 0.75rem;
    font-size: 1rem;
    resize: vertical;
    box-shadow: inset 0 1px 3px rgba(0,0,0,0.05);
}

.form-actions {
    padding: 1rem;
    text-align: center;
}

.btn-save {
    background: linear-gradient(120deg,#5D3AEE,#A56EFF);
    color: white;
    border: none;
    padding: 0.6rem 1.5rem;
    border-radius: 0.75rem;
    font-weight: 600;
    font-size: 1rem;
}

.btn-save:hover {
    opacity: 0.9;
}
</style>

@code {
    private JournalEntry _newEntry = new JournalEntry();

    private void AddTag()
    {
        if (!string.IsNullOrWhiteSpace(_newEntry.CurrentTagInput))
        {
            _newEntry.Tags.Add(_newEntry.CurrentTagInput);
            _newEntry.CurrentTagInput = "";
        }
    }

    private void HandleSaveAsync()
    {
        JournalService.AddEntry(_newEntry);
        _newEntry = new JournalEntry();
        NavManager.NavigateTo("/history");
    }
}
