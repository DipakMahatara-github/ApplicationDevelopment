@page "/add-entry"
@using ApplicationDevelopment.Model
@using ApplicationDevelopment.Service
@using Markdig
@inject NavigationManager NavManager

@if (!isLoaded)
{
    <p></p>
}
else if (!isAllowed)
{
    <p></p>
}
else
{
<div class="entry-page">
    <div class="entry-card shadow-sm">
        <div class="card-header">
            <h2>Create Journal Entry</h2>
        </div>

        <EditForm Model="@_newEntry" OnValidSubmit="HandleSaveAsync">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger mb-2" />

            <div class="form-row">
                <div class="form-group">
                    <label>Primary Mood</label>
                    <InputSelect @bind-Value="_newEntry.PrimaryMood" class="mood-select primary">
                        <option value="">-- Select --</option>
                        <option value="Happy">Happy</option>
                        <option value="Calm">Calm</option>
                        <option value="Sad">Sad</option>
                        <option value="Angry">Angry</option>
                    </InputSelect>
                </div>

                <div class="form-group">
                    <label>Secondary Mood</label>
                    <InputSelect @bind-Value="_newEntry.SecondaryMood" class="mood-select secondary">
                        <option value="">None</option>
                        <option value="Excited">Excited</option>
                        <option value="Tired">Tired</option>
                        <option value="Grateful">Grateful</option>
                    </InputSelect>
                </div>
            </div>

            <div class="form-group tags-group">
                <label>Add Tags</label>
                <div class="tag-input">
                    <InputText @bind-Value="_newEntry.CurrentTagInput" placeholder="e.g. Work, Travel" />
                    <button type="button" class="btn btn-add" @onclick="AddTag">Add</button>
                </div>
                <div class="tag-list">
                    @foreach (var tag in _newEntry.Tags)
                    {
                        <span class="tag-badge">@tag</span>
                    }
                </div>
            </div>

            <!-- ✅ MARKDOWN EDITOR -->
            <div class="form-group">
                <label>Journal Content (Markdown Supported)</label>

                <div style="display:flex; gap:15px;">
                    <!-- Editor -->
                    <InputTextArea 
                        @bind-Value="_newEntry.Content"
                        class="content-area"
                        placeholder="Write using Markdown..."
                        @oninput="UpdatePreview" />

                    <!-- Preview -->
                    <div style="width:50%; border:1px solid #ccc; border-radius:0.75rem; padding:10px; background:white; overflow:auto;">
                        @((MarkupString)_markdownPreview)
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-save">Save Entry</button>
            </div>
        </EditForm>
    </div>
</div>
}

<style>
