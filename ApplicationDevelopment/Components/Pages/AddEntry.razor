@page "/add-entry"
@using ApplicationDevelopment.Model
@using ApplicationDevelopment.Service
@using Markdig
@inject NavigationManager NavManager

@if (!isLoaded)
{
    <p></p>
}
else if (!isAllowed)
{
    <p></p>
}
else
{
<div class="entry-page">
    <div class="entry-card shadow-sm">
        <div class="card-header">
            <h2>Create Journal Entry</h2>
        </div>

        <EditForm Model="@_newEntry" OnValidSubmit="HandleSaveAsync">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger mb-2" />

            <!-- ✅ TITLE -->
            <div class="form-group">
                <label>Title</label>
                <InputText @bind-Value="_newEntry.Title" class="form-control" placeholder="Enter title..." />
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>Primary Mood</label>
                    <InputSelect @bind-Value="_newEntry.PrimaryMood" class="mood-select primary">
                        <option value="">-- Select --</option>
                        <option value="Happy">Happy</option>
                        <option value="Calm">Calm</option>
                        <option value="Sad">Sad</option>
                        <option value="Angry">Angry</option>
                        <option value="Excited">Excited</option>
                        <option value="Tired">Tired</option>
                        <option value="Grateful">Grateful</option>
                    </InputSelect>
                </div>

                <div class="form-group">
                    <label>Secondary Mood 1</label>
                    <InputSelect @bind-Value="_newEntry.SecondaryMood1" class="mood-select secondary">
                        <option value="">None</option>
                        <option value="Happy">Happy</option>
                        <option value="Calm">Calm</option>
                        <option value="Sad">Sad</option>
                        <option value="Angry">Angry</option>
                        <option value="Excited">Excited</option>
                        <option value="Tired">Tired</option>
                        <option value="Grateful">Grateful</option>
                    </InputSelect>
                </div>

                <div class="form-group">
                    <label>Secondary Mood 2</label>
                    <InputSelect @bind-Value="_newEntry.SecondaryMood2" class="mood-select secondary">
                        <option value="">None</option>
                        <option value="Happy">Happy</option>
                        <option value="Calm">Calm</option>
                        <option value="Sad">Sad</option>
                        <option value="Angry">Angry</option>
                        <option value="Excited">Excited</option>
                        <option value="Tired">Tired</option>
                        <option value="Grateful">Grateful</option>
                    </InputSelect>
                </div>
            </div>

            <!-- TAGS -->
            <div class="form-group tags-group">
                <label>Predefined Tags</label>
                <div class="tag-list">
                    @foreach (var tag in predefinedTags)
                    {
                        var isSelected = _newEntry.Tags.Contains(tag);

                        <button type="button"
                                class="tag-btn @(isSelected ? "selected-tag" : "")"
                                @onclick="() => TogglePredefinedTag(tag)">
                            @tag
                        </button>
                    }
                </div>

                <label class="mt-2">Add Custom Tags</label>
                <div class="tag-input">
                    <InputText @bind-Value="_newEntry.CurrentTagInput" placeholder="e.g. Work, Travel" />
                    <button type="button" class="btn btn-add" @onclick="AddTag">Add</button>
                </div>

                <div class="tag-list mt-2">
                    @foreach (var tag in _newEntry.Tags)
                    {
                        <span class="tag-badge">
                            @tag
                            <span style="cursor:pointer;margin-left:6px;" @onclick="() => RemoveTag(tag)">×</span>
                        </span>
                    }
                </div>
            </div>

            <!-- CONTENT -->
            <div class="form-group">
                <label>Journal Content (Markdown Supported)</label>

                <div style="display:flex; gap:15px;">
                    <InputTextArea 
                        @bind-Value="_newEntry.Content"
                        class="content-area"
                        placeholder="Write using Markdown..."
                        @oninput="UpdatePreview" />

                    <div style="width:50%; border:1px solid #ccc; border-radius:0.75rem; padding:10px; background:white; overflow:auto;">
                        @((MarkupString)_markdownPreview)
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-save">Save Entry</button>
            </div>
        </EditForm>
    </div>
</div>
}

<style>
.entry-page {
    display: flex;
    justify-content: center;
    margin: 2rem auto;
}
.entry-card {
    width: 100%;
    max-width: 700px;
    background: #f0f8ff;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}
.card-header {
    background: linear-gradient(120deg, #00B4D8, #48CAE4);
    color: white;
    padding: 1.5rem;
    text-align: center;
    font-weight: 600;
    font-size: 1.6rem;
}
.form-row {
    display: flex;
    gap: 1rem;
    padding: 1rem;
}
.form-group {
    flex: 1;
    display: flex;
    flex-direction: column;
    margin-bottom: 1rem;
}
label {
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: #0077B6;
}
.mood-select {
    padding: 0.5rem;
    border-radius: 0.5rem;
    border: 1px solid #ccc;
}
.tags-group {
    padding: 0 1rem;
}
.tag-input {
    display: flex;
    gap: 0.5rem;
}
.btn-add {
    background: #00B4D8;
    color: white;
    border: none;
    border-radius: 0.5rem;
    padding: 0.4rem 0.8rem;
}
.tag-list {
    margin-top: 0.5rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
}
.tag-badge {
    background: #ade8f4;
    color: #0077B6;
    padding: 0.3rem 0.7rem;
    border-radius: 1rem;
    font-size: 0.85rem;
}
.tag-btn {
    border: 1px solid #00B4D8;
    background: white;
    color: #0077B6;
    padding: 0.3rem 0.7rem;
    border-radius: 1rem;
    margin: 0.2rem;
    cursor: pointer;
    font-size: 0.85rem;
}
.selected-tag {
    background: #00B4D8;
    color: white;
}
.content-area {
    width: 50%;
    min-height: 200px;
    border-radius: 0.75rem;
    border: 1px solid #ccc;
    padding: 0.75rem;
    font-size: 1rem;
    resize: vertical;
}
.form-actions {
    padding: 1rem;
    text-align: center;
}
.btn-save {
    background: linear-gradient(120deg, #00B4D8, #48CAE4);
    color: white;
    border: none;
    padding: 0.6rem 1.5rem;
    border-radius: 0.75rem;
    font-weight: 600;
    font-size: 1rem;
}
</style>

@code {
    private bool isLoaded = false;
    private bool isAllowed = false;

    private JournalEntry _newEntry = new();
    private string _markdownPreview = "";

    private List<string> predefinedTags = new()
    {
        "#Work", "#Health", "#Travel", "#Study", "#Family", "#Friends", "#Fitness", "#Finance", "#Mood"
    };

    protected override Task OnInitializedAsync()
    {
        isAllowed = AuthService.IsLoggedIn();

        if (!isAllowed)
        {
            NavManager.NavigateTo("/login", true);
            return Task.CompletedTask;
        }

        isLoaded = true;
        return Task.CompletedTask;
    }

    private void UpdatePreview(ChangeEventArgs e)
    {
        var text = _newEntry.Content ?? "";
        _markdownPreview = Markdown.ToHtml(text);
    }

    private void TogglePredefinedTag(string tag)
    {
        if (_newEntry.Tags.Contains(tag))
            _newEntry.Tags.Remove(tag);
        else
            _newEntry.Tags.Add(tag);
    }

    private void AddTag()
    {
        if (string.IsNullOrWhiteSpace(_newEntry.CurrentTagInput))
            return;

        var tags = _newEntry.CurrentTagInput.Split(',', StringSplitOptions.RemoveEmptyEntries);

        foreach (var tag in tags)
        {
            var cleanTag = tag.Trim();
            if (!cleanTag.StartsWith("#"))
                cleanTag = "#" + cleanTag;

            if (!_newEntry.Tags.Contains(cleanTag))
                _newEntry.Tags.Add(cleanTag);
        }

        _newEntry.CurrentTagInput = "";
        StateHasChanged();
    }

    private void RemoveTag(string tag)
    {
        _newEntry.Tags.Remove(tag);
    }

    private async Task HandleSaveAsync()
    {
        _newEntry.SyncTags();
        _newEntry.SetMoodCategory();

        await JournalService.AddEntryAsync(_newEntry);
        _newEntry = new JournalEntry();
        NavManager.NavigateTo("/history");
    }
}
