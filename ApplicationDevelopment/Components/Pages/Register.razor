@page "/register"
@using ApplicationDevelopment.Service
@inject NavigationManager NavManager

<div class="auth-page">
    <div class="auth-card">
        <!-- Registration page heading -->
        <h2>üë§ Register Account</h2>

        <!-- Display success or validation message -->
        @if (!string.IsNullOrEmpty(_message))
        {
            <div class="auth-success">@_message</div>
        }

        <!-- Username input field -->
        <div class="auth-group">
            <label>Username</label>
            <input class="auth-input" @bind="_username" placeholder="Create username" />
        </div>

        <!-- Password input field -->
        <div class="auth-group">
            <label>Password</label>
            <input type="password" class="auth-input" @bind="_password" placeholder="Create password" />
        </div>

        <!-- Register button triggers account creation -->
        <button class="auth-btn" @onclick="RegisterUser">Register</button>

        <!-- Link to login page -->
        <div class="auth-link">
            Already have an account?
            <span @onclick="GoToLogin">Login</span>
        </div>
    </div>
</div>

<style>
/* Center registration card on the page */
.auth-page {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80vh;
}

/* Registration card styling */
.auth-card {
    width: 380px;
    background: #ffffff;
    padding: 2rem;
    border-radius: 1.2rem;
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    text-align: center;
    animation: fadeIn 0.4s ease-in-out;
}

/* Heading styling */
.auth-card h2 {
    margin-bottom: 1.2rem;
    color: #0077B6;
    font-weight: 700;
}

/* Form group styling */
.auth-group {
    text-align: left;
    margin-bottom: 1rem;
}

/* Label styling */
.auth-group label {
    font-weight: 600;
    font-size: 0.95rem;
    color: #023E8A;
}

/* Input field styling */
.auth-input {
    width: 100%;
    padding: 0.6rem 0.75rem;
    border-radius: 0.6rem;
    border: 1px solid #ccc;
    font-size: 0.95rem;
    margin-top: 0.3rem;
    transition: 0.2s;
}

/* Input focus effect */
.auth-input:focus {
    outline: none;
    border-color: #00B4D8;
    box-shadow: 0 0 0 2px rgba(0,180,216,0.15);
}

/* Register button styling */
.auth-btn {
    width: 100%;
    margin-top: 0.8rem;
    background: linear-gradient(120deg, #00B4D8, #48CAE4);
    border: none;
    color: white;
    padding: 0.65rem;
    border-radius: 0.7rem;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: 0.2s;
}

/* Button hover effect */
.auth-btn:hover {
    transform: scale(1.02);
    background: linear-gradient(120deg, #0096C7, #00B4D8);
}

/* Login link styling */
.auth-link {
    margin-top: 1rem;
    font-size: 0.95rem;
    color: #555;
}

.auth-link span {
    color: #0077B6;
    cursor: pointer;
    font-weight: 600;
}

.auth-link span:hover {
    text-decoration: underline;
}

/* Success message styling */
.auth-success {
    background: #e6fffa;
    color: #065f46;
    padding: 0.5rem;
    border-radius: 0.5rem;
    margin-bottom: 0.8rem;
    font-size: 0.9rem;
}

/* Simple fade-in animation for better UX */
@@keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
}
</style>

@code {
    // Stores username entered by the user
    private string _username = "";

    // Stores password entered by the user
    private string _password = "";

    // Stores success or validation message
    private string _message = "";

    // Handles user registration logic
    private async Task RegisterUser()
    {
        // Validate input fields before registration
        if (string.IsNullOrWhiteSpace(_username) || string.IsNullOrWhiteSpace(_password))
        {
            _message = "‚ö†Ô∏è Username and password required!";
            return;
        }

        // Call authentication service to register the user
        await AuthService.RegisterAsync(_username, _password);
        _message = "‚úÖ Account created successfully!";

        // Small delay to show success message before redirecting
        await Task.Delay(800);

        // Redirect user to login page after successful registration
        NavManager.NavigateTo("/login");
    }

    // Navigate directly to login page
    private void GoToLogin()
    {
        NavManager.NavigateTo("/login");
    }
}
