@page "/edit-entry/{Id:guid}"
@using ApplicationDevelopment.Model
@using ApplicationDevelopment.Service
@using Markdig
@inject NavigationManager NavManager

@if (_entryToEdit == null)
{
    <p></p>
}
else
{
<div class="entry-page">
    <div class="entry-card shadow-sm">
        <div class="card-header">
            <h2>Edit Journal Entry</h2>
        </div>

        <!-- Form to update an existing journal entry -->
        <EditForm Model="@_entryToEdit" OnValidSubmit="HandleUpdateAsync">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger mb-2" />

            <!-- Title of the journal entry -->
            <div class="form-group">
                <label>Title</label>
                <InputText @bind-Value="_entryToEdit.Title" class="form-control" />
            </div>

            <!-- Mood selection (Primary + Secondary moods) -->
            <div class="form-row">
                <div class="form-group">
                    <label>Primary Mood</label>
                    <InputSelect @bind-Value="_entryToEdit.PrimaryMood" class="mood-select primary">
                        <option value="">-- Select --</option>
                        <option value="Happy">Happy</option>
                        <option value="Calm">Calm</option>
                        <option value="Sad">Sad</option>
                        <option value="Angry">Angry</option>
                        <option value="Excited">Excited</option>
                        <option value="Tired">Tired</option>
                        <option value="Grateful">Grateful</option>
                    </InputSelect>
                </div>

                <div class="form-group">
                    <label>Secondary Mood 1</label>
                    <InputSelect @bind-Value="_entryToEdit.SecondaryMood1" class="mood-select secondary">
                        <option value="">None</option>
                        <option value="Happy">Happy</option>
                        <option value="Calm">Calm</option>
                        <option value="Sad">Sad</option>
                        <option value="Angry">Angry</option>
                        <option value="Excited">Excited</option>
                        <option value="Tired">Tired</option>
                        <option value="Grateful">Grateful</option>
                    </InputSelect>
                </div>

                <div class="form-group">
                    <label>Secondary Mood 2</label>
                    <InputSelect @bind-Value="_entryToEdit.SecondaryMood2" class="mood-select secondary">
                        <option value="">None</option>
                        <option value="Happy">Happy</option>
                        <option value="Calm">Calm</option>
                        <option value="Sad">Sad</option>
                        <option value="Angry">Angry</option>
                        <option value="Excited">Excited</option>
                        <option value="Tired">Tired</option>
                        <option value="Grateful">Grateful</option>
                    </InputSelect>
                </div>
            </div>

            <!-- Tag selection (predefined + custom tags) -->
            <div class="form-group tags-group">
                <label>Predefined Tags</label>
                <div class="tag-list">
                    @foreach (var tag in predefinedTags)
                    {
                        var isSelected = _entryToEdit.Tags.Contains(tag);

                        <button type="button"
                                class="tag-btn @(isSelected ? "selected-tag" : "")"
                                @onclick="() => TogglePredefinedTag(tag)">
                            @tag
                        </button>
                    }
                </div>

                <label class="mt-2">Add Custom Tags</label>
                <div class="tag-input">
                    <InputText @bind-Value="_entryToEdit.CurrentTagInput" placeholder="e.g. Work, Travel" />
                    <button type="button" class="btn btn-add" @onclick="AddTag">Add</button>
                </div>

                <div class="tag-list mt-2">
                    @foreach (var tag in _entryToEdit.Tags)
                    {
                        <span class="tag-badge">
                            @tag
                            <span style="cursor:pointer;margin-left:6px;" @onclick="() => RemoveTag(tag)">Ã—</span>
                        </span>
                    }
                </div>
            </div>

            <!-- Journal content with Markdown preview -->
            <div class="form-group">
                <label>Journal Content (Markdown Supported)</label>

                <div style="display:flex; gap:15px;">
                    <InputTextArea
                        @bind-Value="_entryToEdit.Content"
                        class="content-area"
                        @oninput="UpdatePreview" />

                    <div class="preview-box">
                        @((MarkupString)_markdownPreview)
                    </div>
                </div>
            </div>

            <!-- Action buttons -->
            <div class="form-actions">
                <button type="submit" class="btn btn-save">Update Entry</button>
                <button type="button" class="btn btn-cancel" @onclick="Cancel">Cancel</button>
            </div>
        </EditForm>
    </div>
</div>
}

<style>
/* Layout container */
.entry-page {
    display: flex;
    justify-content: center;
    margin: 2.5rem auto;
}

/* Main card */
.entry-card {
    width: 100%;
    max-width: 900px;
    background: #f0f8ff;
    border-radius: 1.2rem;
    overflow: hidden;
    box-shadow: 0 6px 14px rgba(0,0,0,0.12);
    padding-bottom: 1.2rem;
}

/* Space between header and form */
.entry-card form {
    margin-top: 1.2rem;
}

/* Header section */
.card-header {
    background: linear-gradient(120deg, #00B4D8, #48CAE4);
    color: white;
    padding: 2rem;
    text-align: center;
    font-weight: 600;
    font-size: 1.7rem;
}

/* Form spacing */
.form-group {
    flex: 1;
    display: flex;
    flex-direction: column;
    margin-bottom: 1.8rem;
    padding: 0 2rem;
}

/* Mood grid layout */
.form-row {
    display: flex;
    gap: 2rem;
    padding: 0 2rem;
    margin-top: 0.5rem;
}

/* Labels */
label {
    margin-bottom: 0.7rem;
    font-weight: 600;
    color: #0077B6;
    font-size: 1.05rem;
}

/* Inputs */
.form-control,
.mood-select {
    padding: 0.65rem 0.8rem;
    border-radius: 0.6rem;
    border: 1px solid #ccc;
    font-size: 1.02rem;
}

/* Tags section */
.tags-group {
    padding: 0 2rem;
    margin-top: 0.5rem;
}

.tag-input {
    display: flex;
    gap: 0.7rem;
    margin-top: 0.4rem;
}

.tag-list {
    margin-top: 0.7rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.6rem;
}

.tag-btn {
    border: 1px solid #00B4D8;
    background: white;
    color: #0077B6;
    padding: 0.45rem 0.9rem;
    border-radius: 1rem;
    cursor: pointer;
    font-size: 0.95rem;
}

.tag-badge {
    background: #ade8f4;
    color: #0077B6;
    padding: 0.4rem 0.85rem;
    border-radius: 1rem;
    font-size: 0.9rem;
}

.selected-tag {
    background: #00B4D8;
    color: white;
}

/* Content area */
.content-area {
    width: 50%;
    min-height: 260px;
    border-radius: 0.8rem;
    border: 1px solid #ccc;
    padding: 1rem;
    font-size: 1.02rem;
}

.preview-box {
    width: 50%;
    min-height: 260px;
    border: 1px solid #ccc;
    border-radius: 0.8rem;
    padding: 1rem;
    background: white;
    overflow: auto;
    font-size: 1.02rem;
}

/* Buttons */
.form-actions {
    padding: 1.5rem;
    text-align: center;
}

.btn-save {
    background: linear-gradient(120deg, #00B4D8, #48CAE4);
    color: white;
    border: none;
    padding: 0.7rem 2rem;
    border-radius: 0.8rem;
    font-weight: 600;
    font-size: 1.05rem;
}

.btn-cancel {
    margin-left: 12px;
    background: #ccc;
    border: none;
    padding: 0.7rem 2rem;
    border-radius: 0.8rem;
    font-size: 1.05rem;
}
</style>

@code {
    // Route parameter: unique ID of the journal entry
    [Parameter] public Guid Id { get; set; }

    // Object that stores the entry being edited
    private JournalEntry? _entryToEdit;

    // Stores HTML preview of Markdown content
    private string _markdownPreview = "";

    // List of predefined tags
    private List<string> predefinedTags = new()
    {
        "#Work", "#Health", "#Travel", "#Study", "#Family", "#Friends", "#Fitness", "#Finance", "#Mood"
    };

    // Load entry when page opens
    protected override async Task OnInitializedAsync()
    {
        // Redirect if user is not logged in
        if (!AuthService.IsLoggedIn())
        {
            NavManager.NavigateTo("/login", true);
            return;
        }

        // Fetch entry from database using ID
        _entryToEdit = await JournalService.GetEntryByIdAsync(Id);
        _entryToEdit?.LoadTags();

        // Generate initial Markdown preview
        if (_entryToEdit != null)
            _markdownPreview = Markdown.ToHtml(_entryToEdit.Content ?? "");
    }

    // Update Markdown preview when user types
    private void UpdatePreview(ChangeEventArgs e)
    {
        var text = _entryToEdit?.Content ?? "";
        _markdownPreview = Markdown.ToHtml(text);
    }

    // Add or remove predefined tags
    private void TogglePredefinedTag(string tag)
    {
        if (_entryToEdit!.Tags.Contains(tag))
            _entryToEdit.Tags.Remove(tag);
        else
            _entryToEdit.Tags.Add(tag);
    }

    // Add custom tags entered by user
    private void AddTag()
    {
        if (string.IsNullOrWhiteSpace(_entryToEdit?.CurrentTagInput))
            return;

        var tags = _entryToEdit.CurrentTagInput.Split(',', StringSplitOptions.RemoveEmptyEntries);

        foreach (var tag in tags)
        {
            var cleanTag = tag.Trim();
            if (!cleanTag.StartsWith("#"))
                cleanTag = "#" + cleanTag;

            if (!_entryToEdit.Tags.Contains(cleanTag))
                _entryToEdit.Tags.Add(cleanTag);
        }

        _entryToEdit.CurrentTagInput = "";
        StateHasChanged();
    }

    // Remove selected tag
    private void RemoveTag(string tag)
    {
        _entryToEdit!.Tags.Remove(tag);
    }

    // Save updated entry to database
    private async Task HandleUpdateAsync()
    {
        _entryToEdit!.SyncTags();        // Convert tags to JSON
        _entryToEdit.SetMoodCategory();  // Update mood category

        await JournalService.UpdateEntryAsync(_entryToEdit);

        // Redirect to history page
        NavManager.NavigateTo("/history");
    }

    // Cancel editing and go back
    private void Cancel()
    {
        NavManager.NavigateTo("/history");
    }
}
